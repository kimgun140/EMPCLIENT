<Window x:Class="EMPCLIENT.question_add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMPCLIENT"
        mc:Ignorable="d"
        Title="question_add" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="question_add_btn" TextWrapping="Wrap" Text="추가할 단어" Width="120" Margin="209,270,471,84" Height="80" />
        <Button x:Name="word_add" Content="단어 추가" Margin="496,270,0,0" Click="Button_Click" Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" Height="80"/>
        <Button Content="미리보기" Margin="0,270,0,0" Click="Button_Click_1" Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="testbox" TextWrapping="Wrap" Text="문제관리 창" Margin="73,0,94,362" />
        <ListView x:Name="question_listview" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="31,77,50,225">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="단어" DisplayMemberBinding="{Binding word}" Width="100"/>
                    <GridViewColumn Header="뜻" DisplayMemberBinding="{Binding meaning}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
